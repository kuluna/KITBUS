<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/appicon_background</item>
        <item name="colorPrimaryDark">@color/appicon_deep</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/appicon_background</item>
        <item name="colorPrimaryDark">@color/appicon_deep</item>
    </style>

    <style name="AppTheme.NoElevationV14" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Dialog.WhenLarge" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="colorPrimary">@color/appicon_background</item>
        <item name="colorPrimaryDark">@color/appicon_deep</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
